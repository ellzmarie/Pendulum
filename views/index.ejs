    h1 {
      display: inline;
      text-align: center;
      padding: 2px;
      font-family: 'Montserrat', sans-serif
    }

    .todo-container {
      position: absolute;
      top: 50%;
      left: 50%;
      padding: 30px;
      width: 900px;
      transform: translate(-50%, -50%);
      background: #d9c5B8;
      border-radius: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .todo {
      width: 900px;
      height: 900px;
      display: flex;
      border: solid #ece2db;
      flex-wrap: wrap;
    }

    .todo, .item-title-one, .user-list {
    flex-basis: 100%;
    }
  
    .item-title-one {
      display: flex;
      flex-direction: row;
      border-radius: 5px; 
      justify-content: space-evenly; 
      width: 700px;
      align-items: flex-start;

    }
    .user-list {
      display: flex;
      flex-direction: row;
      border-radius: 5px; 
      justify-content: space-evenly; 
      width: 700px;
      flex-wrap: wrap;
      align-items: flex-start;
      content: "";
      border: 0.5px solid #ece2db;
    }
