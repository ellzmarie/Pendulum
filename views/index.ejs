</style>

<body>
  <!-- ============ HEADER ============ -->
  <!-- ============ MAIN ============ -->
  <main>
    <div class="todo-container">
      <h1>TODO LIST</h1>
      <form action="/pendulum" method="POST">
        
        <label for="taskName">Task:</label>
        <input type="text" name="taskName" /><br><br>

        <label for="date">Date:</label>
        <input type="text" name="date" /><br><br>

        <label for="status">Status:</label>
        <input type="text" name="status" /><br><br>

        <label for="priority">Priority:</label>
        <input type="text" name="priority" /><br><br>
        
        <label for="notes">Notes:</label>
        <input type="text" name="notes" /><br><br>

        <lablel for="completed">Completed:</lablel>
        <input type="checkbox" name="completed">

        <input type="submit" class="user-info new-btn">

          <br><br>
      </form>
      <h2>TASKS</h2>
      <div class="todo">
        <h4>
          <div class="item-title-one">
            <% taskitems.forEach(item=> { %>
              <div class="user-list">
                <div class="user-info">
                  <a href="/pendulum/<%=item._id %>" class="taskName">
                    <%=item.taskName %>
                  </a>
                </div>
                <!-- <div class="user-info date"><%=item.date %></div>
        <div class="user-info status"><%=item.status %></div>
        <div class="user-info priority"><%=item.priority %></div>
        <div class="user-info notes"><%=item.notes %></div>  -->

                <div class="aed-btns"></div>
                <a href="/pendulum/<%=item._id%>/edit"><button class="user-info edit">EDIT</button></a>
                <form action="/pendulum/<%=item._id %>?_method=DELETE" method="post">
                  <input type="submit" value="DELETE" class='user-info delete' />
                </form>
                <% }) %>
              </div>
          </div>
      </div>

  </main>
</body>

</html>

