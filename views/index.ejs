<body>
  <!-- ============ HEADER ============ -->
  <!-- ============ MAIN ============ -->
  <main>

    <div class="todo-container">
      <h1>TODO LIST</h1>

      <div class="todo">
        <h4><div class="item-title-one">
          <div class="user-info taskName">Task</div>
          <div class="user-info date">Date</div>
          <div class="user-info status">Status</div>
          <div class="user-info priority">Priority</div>
          <div class="user-info notes">Notes</div><br>
          <div class="user-info update"></div>
        </div></h4> 
        
        <% taskitems.forEach(item=> { %>
        <div class="user-list">
        <div class="user-info taskName"><%=item.taskName %></div>
        <div class="user-info date"><%=item.date %></div>
        <div class="user-info status"><%=item.status %></div>
        <div class="user-info priority"><%=item.priority %></div>
        <div class="user-info notes"><%=item.notes %></div>
        <div class="aed-btns"></div>                  
            <a href="/pendulum/<%=item._id %>"></a>
              <input type="submit" value="ADD" class="user-info add"><a href="/pendulum/<%=item._id%>/new"></a>
              <input type="submit" value="EDIT" class="user-info edit"><a href="/pendulum/<%=item._id%>/edit"></a>
              <form action="/pendulum/<%=item._id %>?_method=DELETE" method="post">
              <input type="submit" value="DELETE" class='user-info delete' />
              </form>
              <% }) %>
        </div>
      </div>
      </div>

  </main>
</body>

